@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<DotnetTraining.Models.Category>
@{
    int CurrentPage = ViewBag.CurrentPage;
    ViewData["Title"] = "Danh sách danh mục" + CurrentPage;
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div class="header-sub-title">
        <nav class="breadcrumb breadcrumb-dash">
            <a asp-area="Admin" asp-controller="Home" asp-action="Index" class="breadcrumb-item"><i class="anticon anticon-home m-r-5"></i>Home</a>
            <span class="breadcrumb-item active">Danh sách danh mục : page @CurrentPage</span>
        </nav>
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name</th>
                <th scope="col">Mô tả</th>
                <th scope="col"><a class="btn btn-primary m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Create">Create new Role</a></th>
            </tr>
        </thead>
        <tbody>
            @if(Model != null)
            {
                foreach (var item in Model)
                {
                    <tr>
                        <th scope="row">@item.CatId</th>
                        <td>@item.CatName</td>
                        <td>@item.Description</td>
                        <td>
                            <a class="btn btn-primary m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Details" asp-route-id="@item.CatId">View</a>
                            <a class="btn btn-secondary m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Edit" asp-route-id="@item.CatId">Edit</a>
                            <a class="btn btn-success m-r-5" asp-area="Admin" asp-controller="AdminCategories" asp-action="Delete" asp-route-id="@item.CatId">Delete</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
    <div aria-label="Page navigation example">
        <ul class="pagination">
            <pager class="paper-container" list="@Model" asp-area="Admin" asp-controller="AdminCategories" asp-action="Index"></pager>
            
        </ul>
    </div>

</div>
